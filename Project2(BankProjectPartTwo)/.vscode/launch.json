{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,  // Ensures the output appears in an external terminal
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: MinGW g++ build active file",
            "windows": {
                "powershell": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0"  // Optional: specify cmd.exe or any other terminal
            }
        }
    ]
}
